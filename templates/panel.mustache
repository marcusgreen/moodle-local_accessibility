{{!
    @template local/accessibility
    Accessibility panel

    Context variables required for this template:
    * widgets strClass[] - widget records
}}
<div class="local-accessibility-panel border-primary p-0 card col-10 col-lg-8">
    <div class="card-header bg-primary text-light">
        <i class="fa fa-universal-access"></i>
        {{#str}} pluginname, local_accessibility {{/str}}
        <a href="javascript:void(0);" id="local-accessibility-closebtn" class="float-right text-light text-decoration-none">
            <i class="fa fa-times"></i>
        </a>
    </div>
    <div class="card-body">
        <div class="container">
            <div class="row">
                {{#widgets}}
                    <div class="{{class}} card">
                        <div class="card-body {{name}}-container">
                            <p><strong>{{title}}</strong></p>
                            {{{content}}}
                        </div>
                    </div>
                {{/widgets}}
            </div>
        </div>
    </div>
</div>
